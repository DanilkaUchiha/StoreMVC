@model StoreMVC.Models.ViewModels.ProductViewModel

@{
    ViewData["Title"] = "Delete";
}

<h2 class="text-info mt-1">Delete Product</h2>

<form method="post" asp-action="Delete">
    <div class="p-4 rounded border row">

        <div class="col-8">
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="Product.Name"></label>
                </div>
                <div class="col-8">
                    <input class="form-control" asp-for="Product.Name" disabled />
                </div>
            </div>
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="Product.Price"></label>
                </div>
                <div class="col-8">
                    <input class="form-control" asp-for="Product.Price" disabled />
                </div>
            </div>
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="Product.Available"></label>
                </div>
                <div class="col-8">
                    <div class="custom-control custom-switch">
                        <input class="custom-control-input" type="checkbox" asp-for="Product.Available" id="AvailableOrNot" disabled />
                        <label class="custom-control-label" for="AvailableOrNot">Toggle to make the product available</label>
                    </div>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="Product.ProductType"></label>
                </div>
                <div class="col-8">
                    <input class="form-control" asp-for="Product.ProductType.Name" disabled />
                </div>
            </div>
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="Product.SpecialTag"></label>
                </div>
                <div class="col-8">
                    <input class="form-control" asp-for="Product.SpecialTag.Name" disabled />
                </div>
            </div>
        </div>

        @*Создаём новые колонки для вывода изображения*@
        <div class="col-3 offset-1">
            @*Ограничиваем 100 от контейнера внешнего*@
            <img src="@Model.Product.Image" width="100%" style="border: 1px solid #bbb9b9" />
        </div>

        <br />
        <div class="form-group">
            <button class="btn btn-danger" type="submit" asp-route-id="@Model.Product.Id">
                <i class="fas fa-trash-alt"></i>
            </button>
            <a asp-action="Index" class="btn btn-success">Back to products</a>
        </div>
    </div>
</form>
