@model StoreMVC.Models.ApplicationUser

@{
    ViewData["Title"] = "Delete";
}

<h2 class="text-info">Delete Admin user</h2>

<form method="post" asp-action="Delete">
    <div class="p-4 border rounded">
        <div class="form-group row">
            <div class="col-form-label col-2">
                <label asp-for="Name"></label>
            </div>
            <div class="col-7">
                <input class="form-control" asp-for="Name" disabled/>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-2 col-form-label">
                <label asp-for="Email"></label>
            </div>
            <div class="col-7">
                <input class="form-control" asp-for="Email" disabled />
            </div>
        </div>
        <div class="form-group row">
            <div class="col-2 col-form-label">
                <label asp-for="PhoneNumber"></label>
            </div>
            <div class="col-7">
                <input class="form-control" asp-for="PhoneNumber" disabled />
            </div>
        </div>
        <br />
        <div class="form-group">
            <input type="submit" asp-route-id="@Model.Id" class="btn btn-danger" value="Delete user" />
            <a asp-action="Index" class="btn btn-primary">Back to Admin users</a>
        </div>
    </div>
</form>