}


<h2 class="text-info mt-1">Details of Product Type</h2>

    <div class="p-4 border rounded">

        <div class="row form-group">
            <div class="col-2">
                <label asp-for="Name"></label>
            </div>
            <div class="col-5">
                <input asp-for="Name" class="form-control" disabled />
